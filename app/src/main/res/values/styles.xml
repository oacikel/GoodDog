<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="titleTextStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/red_hat_display_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subTitleTextStyle" parent="titleTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="standardButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/red_hat_display_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">@dimen/margin_16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>